extends ../admin

block content
    div.d-flex.justify-content-between.flex-wrap.flex-md-nowrap.align-items-center.pb-2.mb-3.border-bottom
        h1.h2 Welcome to Admin page

        div.btn-toolbar.mb-2.mb-md-0
            div.btn-group.mr-2
                button.btn.btn-sm.btn-outline-secondary Share
                button.btn.btn-sm.btn-outline-secondary Export

            button.btn.btn-sm.btn-outline-secondary.dropdown-toggle
                span(data-feather="calendar")
                = 'This week'
